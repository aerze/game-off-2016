{
  "extends": [
    "airbnb"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "ecmaFeatures": {
    "es6": true
  },
  "rules": {
    "arrow-body-style": [0],
    "comma-dangle": 0, // trailing commas
    "quotes": [2, "single", { "allowTemplateLiterals": true }],
    "quote-props": [2, "consistent"],
    "object-shorthand": [2, "always"],
    "no-unused-vars": 2,
    "no-undef": 2,
    "max-len": [1, 100, 2]
  },
  "globals": {
    "firebase": false
  }
}
